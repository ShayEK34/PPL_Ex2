<Button>:
    color: rgba('#f6e58a')
    background_color: rgba('#f6e58a')

<p>:
    Label:
        size_hint: 0.6,0.2
        pos_hint: {"x":0.2, "top":1}

<MyGrid>:
    canvas.before:
        Color:
            rgba: rgba('#a16d30')
        Rectangle:
            pos: self.pos
            size: self.size
            source: "bicycle_bicycle.jpg"

    cur_location: cur_location
    spend_time: spend_time
    recommendations: recommendations

    GridLayout:
        cols:1
        size: root.width-180, root.height-180
        pos: 90,90

        Label:
            text: "welcome to our recommendations trip system"
            font_size: 30


        Label:
            text: " "

        GridLayout:
            cols:2

            Label:
                text: "what is your current location?"
            TextInput:
                id: cur_location
                multinline: False

            Label:
                text: "How much time would you like to spend?"
            TextInput:
                id: spend_time
                multinline: False

            Label:
                text:"The number of recommendations is desirable"
            TextInput:
                id: recommendations
                multinline: False

        GridLayout:
            Button:
                size:75, 50
                size_hint: None, None
                pos: 350 ,100
                text: "Submit"
                on_press: root.btn()
